Questions 1.
import java.io.*;
import java.util.*;
public class Students {
    public static void main(String[] args){
        Scanner xy = new Scanner(System.in);
        int choice = xy.nextInt();
        switch(choice) {
            case 1:
                String name = xy.next();
                int regNo = -1;
                while(regNo<0){
                    regNo = xy.nextInt();
                }
                if(regNo==0)
                    regNo += 1;
                System.out.print(name + "," + regNo);
                break;
            case 2:
                System.out.print("null,0");
                break;
            default: 
                System.out.print("Wrong Choice");
        }
    }
}

